                    form(action="sendmail.php" method="post").form.form_choice
                        .choice__form-label Ваш номер телефона
                        input(type="text" name="phone").input.input_choice
                        <input type="hidden" name="city" value="Москва">
                        <input type="hidden" name="type" value="фундамент">
                        <input type="hidden" name="leadtype" value="Помощь в выборе">
