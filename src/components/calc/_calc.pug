                    label.calc__form-label
                        .calc__form-img
                            img(src="img/count3.jpg", alt="count")
                            .calc__form-check
                                img(src="img/tick.png", alt="tick")
                        input(name="fundament" type="radio" value="Ростверковый").input_calc-radio
                        .calc__form-label-text Ростверковый
                    label.calc__form-label
                        .calc__form-img
                            img(src="img/count4.jpg", alt="count")
