            form(action="sendmail.php" method="post").form.form_calc 
                .calc__question Какой фундамент вам нужен?  
                .calc__form-checkbox-wrap
                    label.calc__form-label
                        .calc__form-img
                            img(src="img/count1.jpg", alt="count")
                            .calc__form-check
                                img(src="img/tick.png", alt="tick")
                        input(name="fundament" type="radio" value="Ленточный").input_calc-radio
                        .calc__form-label-text Ленточный
                    label.calc__form-label
                        .calc__form-img
                            img(src="img/count2.jpg", alt="count")
